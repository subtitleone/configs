[
  {
    "type": "regex",
    "match": "…7$",
    "replace": "‧‧‧﹖"
  },
  {
    "type": "regex",
    "match": "\\s?(('-:$)|(^'-:)|('\"')|(\\.\"\"))\\s?",
    "replace": "...",
    "description": "Fix ellipsis"
  },
  {
    "type": "regex",
    "match": "[“”]",
    "replace": "\""
  },
  {
    "type": "regex",
    "match": "(\\p{Script=Han}+)\\s+(?=\\p{Script=Han}+)",
    "replace": "$1",
    "description": "Remove spaces between Chinese characters"
  },
  {
    "type": "regex",
    "match": "[\"'“~′\\[_]([^」]+)」",
    "replace": "「$1」",
    "description": "Fix incomplete corner brackets"
  },
  {
    "type": "regex",
    "match": "(\\p{Script=Han})([,!\\?\\.])(\\p{Script=Han})",
    "replace": "$1$2 $3",
    "description": "Add ending space to punctuations"
  },
  {
    "type": "regex",
    "match": "《 *([^》]+)",
    "replace": "《 $1 》"
  },
  {
    "type": "regex",
    "match": "^\"([^\"]+)$",
    "replace": "\"$1\"",
    "description": "Complete quotes"
  }
]